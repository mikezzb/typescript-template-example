{
  "name": "my-package",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "scripts": {
    "build": "tsc",
    "rebuild": "yarn clean && yarn build",
    "example": "yarn --cwd example",
    "eup": "yarn build && yarn example relink",
    "clean": "rm -rf ./lib/",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "dev": "tsc-watch --onSuccess \"yarn example-update\"",
    "clear": "yarn clean && rm -rf node_modules && cd example && rm -rf node_modules",
    "bootstrap": "python setup.py && yarn && yarn build && yarn example && git commit -am \"Chore: init package\""
  },
  "repository": "https://github.com/mikezzb/typescript-template.git",
  "author": "mikezzb <mikezhoudev@gmail.com>",
  "license": "MIT",
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4"
  }
}
